<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/student_cardView"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:cardUseCompatPadding="true"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    app:cardElevation="2dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:foreground="?attr/selectableItemBackground">

        <com.asi.educatyapp.Data.View.CustomViews.CircleImageView
            android:id="@+id/imageStudentClassroom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/mypic" />

        <TextView
            android:gravity="center"
            android:id="@+id/nameStudentClasroom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageBehavior"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            android:text="@string/student_name_group" />

    </LinearLayout>
</android.support.v7.widget.CardView>
