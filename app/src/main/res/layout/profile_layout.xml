<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:frisson="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.intrusoft.library.FrissonView
        android:id="@+id/wave_head"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        frisson:alphaValue="40"
        frisson:autoTint="true"
        frisson:src="@drawable/back"
        frisson:tideCount="3"
        frisson:tideHeight="40dp" />

    <View
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/ic_arrow_back_white_24dp" />

    <View
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/ic_edit" />

    <android.support.v7.widget.CardView
        android:id="@+id/ProfilePic"
        android:layout_width="100dp"
        android:elevation="4dp"
        android:layout_height="100dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="120dp"
        frisson:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/teacherimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mypic" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ProfilePic"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@id/ProfilePic"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Abdulrahman"
        android:textColor="#ffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/ProfilePic"
        android:text="UI/UX Designer | Android Developer"
        android:textColor="#ffff" />

    <TextView
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/messageTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDesc"
        android:layout_below="@+id/tvDesc"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Message"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wave_head"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:foreground="?attr/selectableItemBackground"
                android:elevation="4dp"
                android:id="@+id/connectionLyout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="9096"
                    android:textColor="@color/Cbackground"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="CONNECTIONS"
                    android:textColor="#cc424242" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#148412" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#aa424242" />

            <LinearLayout
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/Badges"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/Cbackground"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="BADGES"
                    android:textColor="#cc424242" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#d9bd5a" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#aa424242" />

            <LinearLayout
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/Skills"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1782"
                    android:textColor="@color/Cbackground"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Skills"
                    android:textColor="#cc424242" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#267693" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_frame"></FrameLayout>
        </android.support.v4.widget.NestedScrollView>



    </LinearLayout>
</RelativeLayout>