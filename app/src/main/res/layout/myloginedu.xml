<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/welcomeclass">

    <ImageView
        android:contentDescription="@string/logo_splash_disc"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:stateListAnimator="@anim/milkshake"
        android:tint="@color/colorPrimary"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </ImageView>


    <LinearLayout
        android:id="@+id/loginglogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="72dp">

        <com.asi.educatyapp.Data.customfonts.MyTextView
            android:id="@+id/studentLogin"
            android:foreground="?attr/selectableItemBackground"
            android:elevation="8dp"
            android:contentDescription="@string/click_to_login_as_a_student"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rect"
            android:text="@string/studentLogin"
            android:textStyle="bold"
            android:padding="16dp"
            android:gravity="center"
            android:textColor="#fff" />

        <com.asi.educatyapp.Data.customfonts.MyTextView
            android:id="@+id/teacherLogin"
            android:contentDescription="@string/teacher_login_button"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:elevation="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rect2"
            android:text="@string/teacher_login"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginLeft="8dp"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>

